<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.graterenowa.graterenowa.Summary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/twojepodsumowanie"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="24sp" />

    <Button
        android:id="@+id/ZapiszWynik"
        android:layout_width="170dp"
        android:layout_height="62dp"
        android:layout_alignBaseline="@+id/zakoncz"
        android:layout_alignBottom="@+id/zakoncz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/zapisz_wynik" />


    <EditText
        android:id="@+id/nickname"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/NickLabel"
        android:layout_marginTop="27dp" />

    <Button
        android:id="@+id/zakoncz"
        android:layout_width="170dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/nickname"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:text="@string/koniec_gry" />

    <TextView
        android:id="@+id/NickLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/twojepodsumowanie"
        android:layout_marginTop="109dp"
        android:text="@string/Pseudo_label"
        android:textSize="18sp" />

</RelativeLayout>
