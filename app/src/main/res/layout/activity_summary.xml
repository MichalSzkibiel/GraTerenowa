<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.graterenowa.graterenowa.Summary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/twojepodsumowanie"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:textSize="24sp" />

    <Button
        android:id="@+id/ZapiszWynik"
        android:layout_width="170dp"
        android:layout_height="62dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/twojepodsumowanie"
        android:text=" Zapisz Wynik" />

    <Button
        android:id="@+id/zakoncz"
        android:layout_width="170dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/twojepodsumowanie"
        android:layout_gravity="right"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:text="Zakończ grę" />

</RelativeLayout>
