<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.graterenowa.graterenowa.Summary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/twojepodsumowanie"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="24sp" />

    <Button
        android:id="@+id/ZapiszWynik"
        android:layout_width="170dp"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="125dp"
        android:text="@string/zapisz_wynik" />


    <EditText
        android:id="@+id/nickname"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/NickLabel"
        android:layout_marginTop="27dp" />

    <Button
        android:id="@+id/zakoncz"
        android:layout_width="170dp"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/ZapiszWynik"
        android:layout_toRightOf="@+id/ZapiszWynik"
        android:text="@string/koniec_gry" />

    <TextView
        android:id="@+id/NickLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ZapiszWynik"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp"
        android:text="@string/Pseudo_label" />

</RelativeLayout>
