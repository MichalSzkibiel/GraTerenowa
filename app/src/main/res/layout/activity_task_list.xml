<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.graterenowa.graterenowa.TaskListActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <Button
        android:id="@+id/returnToMap"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/recyclerView"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/recyclerView"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="@string/backToMap"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="427dp" />

    <Button
        android:id="@+id/endGame"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/recyclerView"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/recyclerView"
        android:text="@string/endGame" />

</RelativeLayout>
